<h1 class="title">Tickets</h1>

<table class="table table-striped">
  <thead>
    <th>Title</th>
    <th>Project</th>
  </thead>
  <tbody>
  <% @user_tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.title %> </td>
      <td><%= ticket.project.title %> </td>
      <td><%= link_to "View ticket", ticket_path(ticket) %> </td>
    </tr>
  <% end %>
  </tbody>
</table>